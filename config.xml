<?xml version='1.0' encoding='utf-8'?>
<widget id="sajibe.kanti.classtrack" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Class Track</name>
    <description>
        Class Track is a app for students and teachers. They can memorized class routine, exam schedule, assignment schedule for each subject. Also add meetings. Subject may be guitar class, cricket class etc. not mandatory subject must be our education related
    </description>
    <author email="root@sajibekani.com" href="http://sajibekanti.com">
        Class Track Devs Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
	<icon src="www/dist/img/class_poll.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
